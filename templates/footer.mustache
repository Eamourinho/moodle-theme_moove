{{!
    @template theme_moove/footer

    Page footer.

    Example context (json):
    {
        "output": {
            "page_doc_link": "Help and documentation",
            "supportemail": "<a href=\"#\">Contact site support</a>",
            "has_popover_links": true,
            "services_support": "Services and support",
            "login_info": "You are logged in as cute kitten",
            "moodle_release": "90210"
        }
    }
}}
<style>
    .wp-block-social-links .wp-social-link.wp-social-link.wp-social-link {
        margin: 4px 8px 4px 0;
    }

    .wp-block-social-links:not(.is-style-logos-only) .wp-social-link-facebook {
        background-color: #000;
        color: #fff;
    }

    .wp-block-social-links.aligncenter {
        justify-content: center;
        display: flex;
    }

    .mb-2, .my-2 {
        margin-bottom: 0.5rem !important;
    }

    .mt-2, .my-2 {
        margin-top: 0.5rem !important;
    }

    .wp-block-social-links {
        background-color: #000 !important;
    }

    .aligncenter {
    }

    .wp-block-social-links {
        background-color: #000 !important;
    }

    .aligncenter {
        clear: both;
    }

    .wp-block-social-links, .wp-block-social-links.has-normal-icon-size {
        font-size: 24px;
    }

    .wp-block-social-links {
        display: flex;
        flex-wrap: wrap;
        padding-left: 0;
        padding-right: 0;
        text-indent: 0;
        margin-left: 0;
    }

    .wp-block-social-link {
        display: block;
        border-radius: 9999px;
        transition: transform .1s ease;
        height: auto;
    }

    *, ::before, ::after {
        box-sizing: border-box;
    }

    .wp-block-social-links, .wp-block-social-links.has-normal-icon-size {
        font-size: 24px;
    }

    .wp-block-social-links {
        text-indent: 0;
    }

    svg {
        color: #fff;
    }
</style>
<footer id="page-footer">
    <div class="moove-container-fluid footer-columns">
        <div class="row">
            <div class="col-md-3">

            </div>
            <div class="col-md-3">
                <div class="mt-2 york-footer-content" style="font-weight: 600;">Connect with York University</div>
            </div>
            <div class="col-md-3 ">

                    <ul class="wp-block-social-links aligncenter is-style-default">
                        <li class="wp-social-link wp-social-link-facebook wp-block-social-link"><a
                                href="https://www.facebook.com/yorkuniversity/" aria-label="Facebook"
                                class="wp-block-social-link-anchor"><i class="fa fa-facebook-official"></i></a></li>

                        <li class="wp-social-link wp-social-link-twitter wp-block-social-link"><a
                                href="https://twitter.com/yorkuniversity" aria-label="Twitter"
                                class="wp-block-social-link-anchor"> <i class="fa fa-twitter"></i></a></li>

                        <li class="wp-social-link wp-social-link-instagram wp-block-social-link"><a
                                href="https://www.instagram.com/yorkuniversity/" aria-label="Instagram"
                                class="wp-block-social-link-anchor"> <i class="fa fa-instagram"></i></a></li>

                        <li class="wp-social-link wp-social-link-linkedin wp-block-social-link"><a
                                href="https://www.linkedin.com/school/167012/" aria-label="LinkedIn"
                                class="wp-block-social-link-anchor"> <i class="fa fa-linkedin-square "></i></a></li>

                        <li class="wp-social-link wp-social-link-youtube wp-block-social-link"><a
                                href="https://www.youtube.com/user/YorkUniversity/" aria-label="YouTube"
                                class="wp-block-social-link-anchor"> <i class="fa fa-youtube-play "></i></a></li>
                    </ul>

            </div>
            <div class="col-md-3">

            </div>
        </div>
        {{{ output.standard_footer_html }}}
    </div>

    <div class="footer-content-debugging footer-dark bg-dark text-light">
        <div class="moove-container-fluid footer-dark-inner">
            {{{ output.debug_footer_html }}}
        </div>
    </div>

    <div data-region="footer-container-popover">
        <button class="btn btn-icon bg-secondary icon-no-margin btn-footer-popover" data-action="footer-popover"
                aria-label="{{#str}}showfooter, theme_boost{{/str}}" onclick='initWatson()'>
            {{#pix}}e/question, core{{/pix}}
        </button>
    </div>
    <div class="footer-content-popover container" data-region="footer-content-popover">
        <div class="footer-section p-3 border-bottom">
            {{{output.render_watson}}}
        </div>
        {{#output.is_staff}}
        <div class="footer-section p-3 border-bottom">
            <button id="ltschat" type="button" class="btn">
            </button>
        </div>
        {{/output.is_staff}}

        {{# output.has_popover_links }}
            <div class="footer-section p-3 border-bottom">
                <a href="https://lthelp.yorku.ca/moodle"
                   class="btn btn-york-red w-100"
                   target="_blank"
                    title="{{#str}}moodledocslink, core{{/str}}"
                >
                    {{#str}}moodledocslink, core{{/str}}
                </a>
                <!-- {{# output.page_doc_link }}
                    <div>{{{ output.page_doc_link }}}</div>
                {{/ output.page_doc_link }}

                {{# output.services_support_link }}
                    <div>{{{ output.services_support_link }}}</div>
                {{/ output.services_support_link }} -->
            </div>
        {{/ output.has_popover_links }}
        {{#output.get_user_tours}}
            <div class="footer-section p-3 border-bottom">
                <a id="resetpagetour" class="btn btn-york-red w-100">
                    {{#str}}reset_user_tour, theme_moove{{/str}}
                </a>
            </div>
        {{/output.get_user_tours}}
        <div class="footer-section p-3">
            <div>{{#str}}poweredbymoodle, core{{/str}}</div>
            {{#output.moodle_release}}
                <div>
                    {{#str}}version, core{{/str}} {{{ output.moodle_release }}}
                </div>
            {{/output.moodle_release}}
        </div>
    </div>

    <input type="hidden" id="sleekplanid" value="{{{output.get_sleekplanid}}}">
    <div class="copyright">
        <div class="container yorku-arrow">
            <div class="row">
                <div class="col-md-4">
                    <div class="york-footer-content">
                        <img class="w-100" src="{{config.wwwroot}}/theme/moove/pix/yorku-logo-ko.png" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="york-footer-content">
                        <ul class="list-unstyled small">
                            <li><span class="font-weight-bold text-white">Keele, Glendon and Markham Campus</span></li>
                            <li><a href="https://www.yorku.ca/about/contact/" class="text-white">Contact</a></li>
                            <li><a href="tel:4167362100" class="text-white">(416) 736-2100</a></li>
                            <li><a href="https://map.concept3d.com/?id=1200#!s/?ct/29101,29093" class="text-white">Campus Maps</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">

                </div>
            </div>
        </div>
    </div>

</footer>

{{{ output.standard_end_of_body_html }}}

{{#js}}
    require(['theme_boost/footer-popover'], function(FooterPopover) {
    FooterPopover.init();
    });
    require(['theme_moove/sleekplan'], function(mod) {
      {{#output.is_staff}}
        mod.init();
      {{/output.is_staff}}
    });
{{/js}}
